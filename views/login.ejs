<%- include('partials/header') %>
<main class="container d-flex flex-column justify-content-center align-items-center h-100">
  <img src="images/login.gif" style="width:20%;">
  <form action="/login" method="POST" class="row">
    <div class="mb-3 col-12">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" name="username">
    </div>
    <div class="mb-3 col-12">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="exampleInputPassword1">
    </div>
    <div class="d-grid">
      <button type="submit" class="btn btn-primary mb-3" style="background-color:#34CCCB; border-color:#34CCCB">Login</button>
      <div class="mt-3 text-center">
          <p>Not a member? <a href="/register" style="color:#34CCCB">Register</a></p>
      </div>
    </div>
  </form>

</main>


<%- include('partials/footer') %>