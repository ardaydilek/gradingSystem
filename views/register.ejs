<%- include('partials/header') %>
<main class="container align-items-center d-flex flex-column justify-content-center h-100">
<img src="images/password.gif" style="width:20%;">
  <form action="/register" method="POST" class="row">
    <div class="mb-3 col-12">
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" name="username" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3 col-12">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="exampleInputPassword1">
    </div>
    <div class="form-floating mb-3 col-12">
      <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="role2">
        <option value="1">Teacher</option>
        <option value="2" selected>Student</option>
      </select>
      <label for="floatingSelect">Roles</label>
    </div>
    <div class="d-grid">
      <button type="submit" class="btn btn-primary" style="background-color:#34CCCB; border-color:#34CCCB">Register</button>
      <div class="mt-3 text-center">
          <p>Already a member? <a href="/login" style="color:#34CCCB">Login</a></p>
      </div>
    </div>
  </form>
  
</main>


<%- include('partials/footer') %>
