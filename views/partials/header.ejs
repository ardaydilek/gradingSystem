<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Student Grading System</title>
    <link rel="icon" href="images/favicon.png">
    <meta name="description" content="Student Grading System">
    <meta name="author" content="Arda Kaan Aydilek">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css">
    <style>
      body{
        font-family: 'Poppins', sans-serif;
      }
    </style>
  </head>
  <body class="d-flex flex-column" style="height:100vh">
    <nav class="navbar navbar-expand-md bg-body-tertiary">
      <div class="container">
        <% if (!req.user) {%>
            <a class="navbar-brand" href="/">Grading System</a>
        <% } else { %>
            <% if(req.user.role=='Student') { %>
                <a class="navbar-brand" href="/student">Grading System - Student</a>
            <% } else { %>
                <a class="navbar-brand" href="/teacher">Grading System - Teacher</a>
            <% } %>
        <% } %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ms-auto">
          <% if (!req.user) {%>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/"><i class="fi fi-rr-home px-2"></i>Home</a>
            </li>
        <% } else { %>
            <% if(req.user.role=='Student') { %>
                <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/student"><i class="fi fi-rr-home px-2"></i>Home</a>
            </li>
            <% } else { %>
                <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/teacher"><i class="fi fi-rr-home px-2"></i>Home</a>
            </li>
            <% } %>
        <% } %>
           <% if (req.user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout"><i class="fi fi-rr-paper-plane px-2"></i>Logout</a>
            </li>
            <% } %>
            
          </ul>
        </div>
      </div>
</nav>