<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Grading</title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-expand-md bg-body-tertiary">
    <div class="container">
      <% if (!req.user) {%>
          <a class="navbar-brand" href="/">Grading</a>
      <% } else { %>
          <% if(req.user.role=='Student') { %>
              <a class="navbar-brand" href="/student">Grading</a>
           <% } else { %>
              <a class="navbar-brand" href="/teacher">Grading</a>
           <% } %>
      <% } %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ms-auto">
        <% if (!req.user) {%>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
      <% } else { %>
          <% if(req.user.role=='Student') { %>
              <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/student">Home</a>
          </li>
           <% } else { %>
              <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/teacher">Home</a>
          </li>
           <% } %>
      <% } %>
          <% if (!req.user) {%>
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <% } else { %>
           <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% } %>
          
        </ul>
      </div>
    </div>
</nav>